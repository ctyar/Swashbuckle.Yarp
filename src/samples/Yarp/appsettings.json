{
  "ReverseProxy": {
    "Routes": {
      "route1": {
        "ClusterId": "cluster1",
        "Match": {
          "Path": "/api1/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api1"
          }
        ]
      },
      "route2": {
        "ClusterId": "cluster2",
        "Match": {
          "Path": "/api2/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api2"
          }
        ]
      }
    },
    "Clusters": {
      "cluster1": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5147"
          }
        }
      },
      "cluster2": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5148"
          }
        }
      }
    }
  }
}